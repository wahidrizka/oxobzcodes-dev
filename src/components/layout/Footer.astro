---
import siteData from '../../data/site.json';

const currentYear = new Date().getFullYear();
---

<footer class="border-t border-white/10 py-8">
  <div class="max-w-5xl mx-auto px-6 flex flex-col items-center gap-4">
    <div class="flex items-center gap-4">
      {siteData.socials.github && (
        <a
          href={siteData.socials.github}
          target="_blank"
          rel="noopener noreferrer"
          class="text-[#888] hover:text-white transition-colors duration-200 text-sm"
        >
          GitHub
        </a>
      )}
      {siteData.socials.linkedin && (
        <a
          href={siteData.socials.linkedin}
          target="_blank"
          rel="noopener noreferrer"
          class="text-[#888] hover:text-white transition-colors duration-200 text-sm"
        >
          LinkedIn
        </a>
      )}
    </div>
    <p class="text-[#888] text-sm">
      &copy; {currentYear} {siteData.name}
    </p>
  </div>
</footer>
